<h1>New Song Form</h1>

<%= form_tag songs_path do %>
  <% if @song.errors.any? %>
    <div class="error_messages">
      <h2>There were errors.</h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field<%= ' field_with_errors' if @song.errors[:title].any? %>">
    <p>Song Title: <%= text_field_tag :'song[title]', @song.title %></p>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:released].any? %>">
    <p>Released: <%= check_box_tag :'song[released]', @song.released %></p>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:release_year].any? %>">
    <p>Release Year: <%= text_field_tag :'song[release_year]', @song.release_year %></p>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:artist_name].any? %>">
    <p>Artist Name: <%= text_field_tag :'song[artist_name]', @song.artist_name %></p>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:genre].any? %>">
    <p>Genre: <%= text_field_tag :'song[genre]', @song.genre %></p>
  </div>

  <%= submit_tag "Submit Song" %>
<% end %>
