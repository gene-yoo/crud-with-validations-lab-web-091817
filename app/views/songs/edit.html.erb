<h1>Song Edit Form</h1>

<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div class="error_messages">
      <h2>There were errors.</h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>Song Title: <%= f.text_field :title %></p>
  <p>Released <%= f.check_box :released %></p>
  <p>Release Year: <%= f.text_field :release_year %></p>
  <p>Artist Name: <%= f.text_field :artist_name %></p>
  <p>Genre: <%= f.text_field :genre %></p>
  <%= f.submit %>
<% end %>
